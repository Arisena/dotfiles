set background=dark
let g:solarized_termcolors=256
colorscheme solarized

syntax on

filetype plugin on
filetype indent on

set number
set tabstop=4
set softtabstop=4
set showcmd
set wildmenu
set incsearch
set hlsearch
set foldenable
set foldmethod=marker

set backup
set backupdir=~/.vim-tmp
set backupskip=/tmp/*
set directory=~/.vim-tmp
set writebackup
